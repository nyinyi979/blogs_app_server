// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model user {
  id        String @id @default(uuid())
  name      String 
  username  String @unique
  email     String

  phone     String
  categories Category[] 
  posts     Post[]
  profile   ProfileImg?
  comments  Comment[]
  reactions reaction[]
}

model Post {
  id          String @id @default(uuid())
  title       String
  content     String @db.VarChar(5500)
  createdAt   DateTime @default(now())
  modifiedAt  DateTime? 
  published   Boolean @default(false)
  
  author      user[]
  images      Image[]
  categories  Category[]
  comments    Comment[]
  reactions   reaction[]
}
model Image{
  url         String @id
  location    String 
  post        Post[]
}
model ProfileImg{
  url     String @id
  user    user @relation(fields: [userID] , references: [id])
  userID  String @unique
}
model Comment {
  id          Int @id @default(autoincrement())
  content     String 
  createdAt   DateTime @default(now())
  post        Post @relation(fields: [postID], references: [id])
  postID      String
  commentedBy user[]
}

model reaction {
  id        Int @id @default(autoincrement())
  givenAt   DateTime @default(now())

  post      Post @relation(fields: [postID], references: [id])
  postID    String
  reactor   user[]
}
model Category { 
  name    String @id 
  user    user[]
  posts   Post[]
}
